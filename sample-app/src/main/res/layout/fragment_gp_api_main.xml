<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.globalpayments.android.sdk.sample.common.views.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/accessTokenButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/access_token" />

            <Button
                android:id="@+id/transactionsButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/transactions" />

            <Button
                android:id="@+id/verificationsButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/verifications" />

            <Button
                android:id="@+id/paymentMethodsButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/payment_methods"
                android:textSize="@dimen/text_size_25sp" />

            <Button
                android:id="@+id/depositsButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/deposits" />

            <Button
                android:id="@+id/disputesButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/disputes" />

            <Button
                android:id="@+id/actionsButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/actions_report" />

            <Button
                android:id="@+id/merchantOnboardingButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/merchant_onboarding" />

            <Button
                android:id="@+id/closeBatchButton"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/close_batch" />

            <Button
                android:id="@+id/hosted_fields_button"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/hosted_fields" />

            <Button
                android:id="@+id/digitalWallet"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/digital_wallet" />

            <Button
                android:id="@+id/paypal_button"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/paypal" />

            <Button
                android:id="@+id/ach_button"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/ach" />

            <Button
                android:id="@+id/ebt_button"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/ebt" />

            <Button
                android:id="@+id/paylink_button"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/paylink" />

            <Button
                android:id="@+id/bnpl_button"
                style="@style/Button.Main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/bnpl" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>