<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <GridLayout
        android:id="@+id/glContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:columnCount="2"
        android:layout_margin="@dimen/size_16dp"
        android:orientation="horizontal"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/tvHeader"
            style="@style/Dialog.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/report_parameters"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1" />

        <TextView
            android:id="@+id/tvPaymentsListPage"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/page" />

        <EditText
            android:id="@+id/etPaymentsListPage"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:background="@null"
            android:inputType="number"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:text="@string/default_page" />

        <TextView
            android:id="@+id/tvPaymentsListPageSize"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/page_size" />

        <EditText
            android:id="@+id/etPaymentsListPageSize"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:background="@null"
            android:inputType="number"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:text="@string/default_page_size" />

        <TextView
            android:id="@+id/tvLabelOrderBy"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/order_by" />

        <com.globalpayments.android.sdk.sample.common.views.CustomSpinner
            android:id="@+id/etPaymentsListOrderBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3" />

        <TextView
            android:id="@+id/tvLabelListOrder"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/order" />

        <com.globalpayments.android.sdk.sample.common.views.CustomSpinner
            android:id="@+id/etPaymentsListOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"/>

        <TextView
            android:id="@+id/tvPaymentsListId"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/payment_id" />

        <EditText
            android:id="@+id/etPaymentsListId"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:background="@null"
            android:inputType="text"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:hint="@string/empty" />

        <TextView
            android:id="@+id/tvPaymentsListReference"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/reference" />

        <EditText
            android:id="@+id/etPaymentsListReference"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:background="@null"
            android:inputType="text"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:hint="@string/empty" />

        <TextView
            android:id="@+id/tvLabelStatus"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/status" />

        <com.globalpayments.android.sdk.sample.common.views.CustomSpinner
            android:id="@+id/statusSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3" />

        <TextView
            android:id="@+id/tvLabelFromTimeCreated"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/from_time_created" />

        <TextView
            android:id="@+id/tvFromTimeCreated"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:hint="@string/empty"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/tvLabelToTimeCreated"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/to_time_created" />

        <TextView
            android:id="@+id/tvToTimeCreated"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:hint="@string/empty"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/tvLabelFromTimeUpdated"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/from_time_last_updated" />

        <TextView
            android:id="@+id/tvFromTimeLastUpdated"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:hint="@string/empty"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/tvLabelToTimeUpdated"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/to_time_last_updated" />

        <TextView
            android:id="@+id/tvtoTimeLastUpdated"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:hint="@string/empty"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/tvLabelPaymentMethodId"
            style="@style/Dialog.Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/payment_method_id" />

        <EditText
            android:id="@+id/etPaymentMethodId"
            style="@style/Dialog.Value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1.3"
            android:background="@null"
            android:hint="@string/empty"
            android:paddingStart="@dimen/size_8dp"
            android:paddingEnd="@dimen/size_8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btSubmit"
            style="@style/Button.Big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1" />

    </GridLayout>
</androidx.core.widget.NestedScrollView>